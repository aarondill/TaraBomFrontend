{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"lib": ["esnext"],
		"target": "esnext",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"incremental": true,
		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"],
}
